<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

<menu id="acessorios-menu" label="Accessorios">
  <item label="Calculadora">
    <action name="Execute">
      <command>mate-calculator</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
</menu>

<menu id="editores-menu" label="Editores">
  <item label="VS Code">
    <action name="Execute">
      <command>code</command>
      <startupnotify>
        <enabled>yes</enabled>
        <wmclass>VS Code</wmclass>
      </startupnotify>
    </action>
  </item>
</menu>

<menu id="terminal-menu" label="Terminais">
  <item label="Termite">
    <action name="Execute">
      <command>termite</command>
    </action>
  </item>
  <item label="MATE Terminal">
    <action name="Execute">
      <command>mate-terminal</command>
    </action>
  </item>
</menu>

<menu id="internet-menu" label="Internet">
  <item label="Firefox">
    <action name="Execute">
      <command>firefox</command>
      <startupnotify>
        <enabled>yes</enabled>
        <wmclass>Firefox</wmclass>
      </startupnotify>
    </action>
  </item>
  <item label="Google Chrome">
    <action name="Execute">
      <command>google-chrome-stable</command>
      <startupnotify>
        <enabled>yes</enabled>
        <wmclass>Chrome</wmclass>
      </startupnotify>
    </action>
  </item>
</menu>

<menu id="office-menu" label="Office">
</menu>

<menu id="multimedia-menu" label="Multimedia">
  <item label="Spotify">
    <action name="Execute">
      <command>spotify</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
</menu>

<menu id="filemanager-menu" label="File Managers">
  <item label="Caja File Manager">
    <action name="Execute">
      <command>caja</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
</menu>

<menu id="sistema-menu" label="Sistema">
  <item label="Configurações Openbox">
    <action name="Execute">
      <command>obconf</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  
  <item label="Aparencia">
    <action name="Execute">
      <command>lxappearance</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  
  <separator />
  <item label="Reconfigure Openbox">
    <action name="Reconfigure" />
  </item>
</menu>

<menu id="root-menu" label="Arch">
  <separator label="Aplicativos" />
  <menu id="acessorios-menu"/>
  <menu id="editores-menu"/>
  <menu id="multimedia-menu"/>
  <menu id="terminal-menu"/>
  <menu id="filemanager-menu"/>
  <separator label="Sistema" />
  <menu id="sistema-menu"/>
  <separator />
  <item label="Log Out">
    <action name="Exit">
      <prompt>yes</prompt>
    </action>
  </item>
</menu>

</openbox_menu>
