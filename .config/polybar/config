format-connected-prefix-foreground = ${colors.pink}
label-connected = " %local_ip%"
format-disconnected = 

# Modulo: Data.
[module/data]
type = internal/date
interval = 500
format-prefix = " " 
format-prefix-foreground = ${colors.azul_turquesa}
date = "%d/%m/%Y"
label = %date%

# Modulo: Hora.
[module/hora]
type = internal/date
interval = 1
format-prefix = " " 
format-prefix-foreground = ${colors.rosa}
time = "%H:%M:%S"
label = %time%


# Modulo: Bateria
[module/bateria]
