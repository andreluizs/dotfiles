# Modulo: Wi-fi
[module/wifi]
type = internal/network
interface = wlp2s0
interval = 3.0
format-connected= <label-connected>
label-connected = " %{F-}%downspeed% %{F#F1F1F1} %{F-}%upspeed%"
format-disconnected = <label-disconnected>
label-disconnected = " ..."
label-disconnected-foreground = ${colors.pink}
ramp-signal-0 = ""
ramp-signal-1 = ""
ramp-signal-2 = ""
ramp-signal-3 = ""
ramp-signal-4 = ""
ramp-signal-foreground = ${colors.pink}

# Modulo: Rede
[module/ethernet]
