# Modulo: Menu sair
[module/power_menu]
type = custom/menu
format-foreground = ${colors.pink}
format = <label-toggle> <menu>
format-padding = 0
format-margin = 0
menu-0-0 = "  Desligar | "
menu-0-0-exec = shutdown now
menu-0-1 = "  Reiniciar | "
menu-0-1-exec = reboot
menu-0-2 = "  Sair | "
menu-0-2-exec = i3-msg exit
menu-0-3 =  "  Cancelar "
label-open = 
label-close =

