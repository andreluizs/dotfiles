# Chrome
bindsym $mod+g exec google-chrome-stable

# Telegram
bindsym $mod+t exec telegram-desktop

# Thunar
bindsym $mod+Ctrl+e exec thunar

# Controle de volume.
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 0 +5% # Aumenta
bindsym XF86AudioLowerVolume exec pactl set-sink-volume 0 -5% # Dimunui
bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle # Mute

# Brilho da tela.
bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # Aumenta
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # Diminui
